<h1>Register</h1>
    <%= form_with model: @user, url: sign_up_path do |form| %>
    <%= render "/shared/error_messages",form: form %>
    <%= form.label :email%>
    <div class="mb-3">
        <%= form.text_field :email ,class:"form-control", placeholder: "steve@apple.com"%> 
        <%# ':email' is written so that the has data is {email: 'Whatever output by user'} when passed to controller %>
    </div>   
    <%= form.label :password%>
    <div class="mb-3">
        <%= form.password_field :password ,class:"form-control", placeholder: "Password" %>
    </div>   
    <%= form.label :password_confirmation%>
    <div class="mb-3">
        <%= form.password_field :password_confirmation ,class:"form-control",placeholder:"Confirmed Password"%>
    </div>   

    <div class = "mb-3">    
    <%= form.submit "Get started" , class: "btn btn-primary"%>
    </div>
<%end%>